{
  "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": false,
      "rootDir": ".",
      "sourceMap": true,
      "moduleResolution": "node",
      "removeComments": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "inlineSourceMap": false,
      "types": [
        "node"
      ],
      "typeRoots": [
          "@types",
          "typings"
      ]
  },
  "exclude": [
      "node_modules",
      "*.json"
  ]
}