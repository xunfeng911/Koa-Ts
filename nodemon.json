{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".vscode",
    ".idea",
    "node_modules/",
    "test/",
    "src/"
  ],
  "verbose": true,
  "execMap": {
    "": "ts-node",
    "js": "node --harmony",
    "ts": "ts-node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "build/"
  ],
  "ext": "ts js json",
  "legacy-watch": false
}